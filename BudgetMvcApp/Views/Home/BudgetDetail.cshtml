                            </path>
                        </svg>
                    </a>
                </form>
            </div>
        </div>
    </div>
    <div class="grid-md">
        <h2>
            <span class="accent">Salary</span>
            Expenses
        </h2>
        @* Expenses List *@
        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Budget</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        @* End *@
    </div>
</div>